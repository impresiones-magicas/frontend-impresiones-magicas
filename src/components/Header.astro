<header class="w-full bg-white border-b relative z-50">
  <!-- Top Bar -->
  <div class="border-b">
    <div
      class="w-full px-6 md:px-12 flex items-center justify-between py-4 gap-8"
    >
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 shrink-0">
        <div
          class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold"
        >
          IM
        </div>
        <span class="font-bold text-xl text-gray-900 tracking-tight"
          >Mi Empresa</span
        >
      </a>

      <!-- Large Search Bar -->
      <div class="hidden md:flex flex-1 max-w-2xl justify-center mx-auto">
        <div class="relative w-full group">
          <input
            type="text"
            class="w-full border border-gray-300 rounded-full py-3 pl-5 pr-12 bg-gray-50 focus:bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all shadow-sm"
            placeholder="¿Qué estás buscando hoy?"
          />
          <button
            class="absolute right-2 top-1/2 -translate-y-1/2 bg-blue-600 text-white p-2 rounded-full hover:bg-blue-700 transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Auth Buttons -->
      <div class="flex items-center gap-2 md:gap-4 shrink-0">
        <button
          class="relative p-2 text-gray-700 hover:text-blue-600 transition-colors"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"
            ></path>
          </svg>
          <span
            class="absolute top-0 right-0 inline-flex items-center justify-center px-1.5 py-0.5 text-xs font-bold leading-none text-white transform translate-x-1/4 -translate-y-1/4 bg-red-600 rounded-full"
            >0</span
          >
        </button>

        <div class="hidden md:block h-6 w-px bg-gray-200"></div>

        <button
          class="hidden md:block px-4 py-2 text-gray-700 font-medium hover:text-blue-600 transition-colors"
          >Iniciar Sesión</button
        >

        <!-- Mobile User Icon (instead of full buttons if needed, or just keep Register) -->
        <button class="md:hidden p-2 text-gray-700">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
            ></path>
          </svg>
        </button>

        <button
          class="hidden md:block bg-black text-white px-5 py-2.5 rounded-full font-medium hover:bg-gray-800 transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
        >
          Registrarse
        </button>

        <!-- Mobile Menu Button -->
        <button class="md:hidden p-2 text-gray-700">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Bottom Nav (Navigation with Subsections) -->
  <nav class="bg-gray-50 border-b hidden md:block">
    <div class="w-full px-6 md:px-12">
      <ul class="flex items-center gap-8 text-sm font-medium text-gray-700">
        <!-- Dropdown 1 -->
        <li class="relative group py-3">
          <button
            class="flex items-center gap-1 hover:text-blue-600 transition-colors"
          >
            Productos
            <svg
              class="w-4 h-4 group-hover:rotate-180 transition-transform"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"></path></svg
            >
          </button>

          <div
            class="absolute left-0 top-full pt-2 w-64 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform group-hover:translate-y-0 translate-y-1 z-50"
          >
            <div
              class="bg-white rounded-xl shadow-xl border border-gray-100 overflow-hidden p-2"
            >
              <a
                href="#"
                class="block px-4 py-2 hover:bg-blue-50 hover:text-blue-600 rounded-lg"
                >Tazas Personalizadas</a
              >
              <a
                href="#"
                class="block px-4 py-2 hover:bg-blue-50 hover:text-blue-600 rounded-lg"
                >Remeras Estampadas</a
              >
              <a
                href="#"
                class="block px-4 py-2 hover:bg-blue-50 hover:text-blue-600 rounded-lg"
                >Llaveros y Pins</a
              >
              <a
                href="#"
                class="block px-4 py-2 hover:bg-blue-50 hover:text-blue-600 rounded-lg"
                >Papelería</a
              >
            </div>
          </div>
        </li>

        <!-- Dropdown 2 -->
        <li class="relative group py-3">
          <button
            class="flex items-center gap-1 hover:text-blue-600 transition-colors"
          >
            Ocasiones
            <svg
              class="w-4 h-4 group-hover:rotate-180 transition-transform"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"></path></svg
            >
          </button>

          <div
            class="absolute left-0 top-full pt-2 w-64 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform group-hover:translate-y-0 translate-y-1 z-50"
          >
            <div
              class="bg-white rounded-xl shadow-xl border border-gray-100 overflow-hidden p-2"
            >
              <a
                href="#"
                class="block px-4 py-2 hover:bg-blue-50 hover:text-blue-600 rounded-lg"
                >Cumpleaños</a
              >
              <a
                href="#"
                class="block px-4 py-2 hover:bg-blue-50 hover:text-blue-600 rounded-lg"
                >Empresariales</a
              >
              <a
                href="#"
                class="block px-4 py-2 hover:bg-blue-50 hover:text-blue-600 rounded-lg"
                >Fechas Especiales</a
              >
            </div>
          </div>
        </li>

        <li class="hover:text-blue-600 transition-colors">
          <a href="#">Novedades</a>
        </li>
        <li class="hover:text-blue-600 transition-colors">
          <a href="#">Ofertas</a>
        </li>
        <li class="hover:text-blue-600 transition-colors">
          <a href="#">Ayuda</a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<!-- Mobile Search (Visible only on small screens) -->
<div class="md:hidden border-b bg-white p-4">
  <div class="relative w-full">
    <input
      type="text"
      class="w-full border border-gray-300 rounded-full py-2 pl-4 pr-10 bg-gray-50 focus:bg-white focus:outline-none focus:ring-2 focus:ring-blue-500"
      placeholder="Buscar..."
    />
    <button class="absolute right-2 top-1/2 -translate-y-1/2 text-gray-500">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
    </button>
  </div>
</div>
