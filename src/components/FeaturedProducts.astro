---
import ProductCard from "../components/ProductsCard.astro";
import products from "../data/products.json";

const featuredProducts = products.filter(p => p.featured);
---
<section class="max-w-8xl  px-4 py-6">
  <h2 class="m-4 text-2xl font-semibold mb-6">Productos Destacados</h2>

<div
  class="
    px-4                /* espacio igual a izquierda y derecha */
    grid
    gap-6               /* mismo espacio en todas las direcciones */
    sm:grid-cols-2
    lg:grid-cols-4
  "
>


    {featuredProducts.map(product => (
      <ProductCard {...product} />
    ))}
  </div>
</section>
